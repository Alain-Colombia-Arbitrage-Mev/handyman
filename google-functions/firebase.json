{
  "functions": [
    {
      "source": ".",
      "codebase": "default",
      "runtime": "nodejs20",
      "predeploy": [
        "npm run typecheck",
        "npm run lint:check",
        "npm run format:check",
        "npm run security-check",
        "npm run test:coverage",
        "npm run build:production"
      ],
      "postdeploy": [
        "npm run health-check",
        "npm run logs --tail"
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/__tests__/**",
        "**/coverage/**",
        "**/docs/**",
        "**/*.test.ts",
        "**/*.spec.ts",
        "benchmark/**",
        "scripts/**",
        "load-tests/**"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001,
      "host": "localhost",
      "inspect": true
    },
    "firestore": {
      "port": 8080,
      "host": "localhost"
    },
    "auth": {
      "port": 9099,
      "host": "localhost"
    },
    "storage": {
      "port": 9199,
      "host": "localhost"
    },
    "pubsub": {
      "port": 8085,
      "host": "localhost"
    },
    "eventarc": {
      "port": 9299,
      "host": "localhost"
    },
    "ui": {
      "enabled": true,
      "port": 4000,
      "host": "localhost"
    },
    "logging": {
      "port": 4500,
      "host": "localhost"
    },
    "singleProjectMode": true,
    "hub": {
      "port": 4400,
      "host": "localhost"
    }
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "docs",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "auth"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "/api/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, PUT, DELETE, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, Authorization, X-API-Key"
          }
        ]
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}