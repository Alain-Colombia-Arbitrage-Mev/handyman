{
  "name": "handyman-auction-functions",
  "version": "2.0.0",
  "description": "Enterprise Google Cloud Functions for Handyman Auction App",
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:production": "cross-env NODE_ENV=production tsc && npm run optimize",
    "serve": "npm run build && firebase emulators:start --only functions",
    "serve:debug": "npm run build && firebase emulators:start --only functions --inspect-functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "dev": "concurrently \"npm run build:watch\" \"nodemon --exec firebase emulators:start --only functions\"",
    "deploy": "npm run build:production && firebase deploy --only functions",
    "deploy:staging": "npm run build:production && firebase deploy --only functions --project staging",
    "deploy:production": "npm run build:production && firebase deploy --only functions --project production",
    "logs": "firebase functions:log",
    "logs:tail": "firebase functions:log --follow",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/__tests__/**/*.integration.test.ts'",
    "test:e2e": "jest --testMatch='**/__tests__/**/*.e2e.test.ts'",
    "test:load": "artillery run load-tests/basic-load.yml",
    "test:security": "npm audit && npm run test:coverage && npm run lint:security",
    "lint": "eslint src/**/*.ts --fix-dry-run",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "lint:security": "eslint src/**/*.ts --config .eslintrc.security.js",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security-check": "npm audit && npm run lint:security && npm run test:security",
    "clean": "rimraf lib coverage .nyc_output .tsbuildinfo",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json",
    "prepare": "husky install",
    "benchmark": "node --max-old-space-size=4096 benchmark/performance.js",
    "bundle-analyze": "webpack-bundle-analyzer lib/index.js --port 8080",
    "health-check": "node scripts/health-check.js",
    "database:seed": "node scripts/seed-database.js",
    "database:migrate": "node scripts/migrate-database.js",
    "docs:generate": "typedoc --out docs src",
    "docs:serve": "http-server docs -p 8080",
    "precommit": "npm run typecheck && npm run lint:check && npm run test && npm run security-check",
    "prepush": "npm run test:coverage && npm run security-check && npm run build:production",
    "optimize": "terser lib/**/*.js --compress --mangle --output-dir lib-optimized",
    "metrics:export": "node scripts/export-metrics.js",
    "cache:clear": "node scripts/clear-cache.js",
    "monitoring:setup": "node scripts/setup-monitoring.js"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    // Firebase & Google Cloud
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.5.0",
    "@google-cloud/storage": "^7.17.1",
    "@google-cloud/vision": "^5.4.0",
    "@google-cloud/bigquery": "^8.2.0",
    "@google-cloud/secret-manager": "^5.8.0",
    "@google-cloud/monitoring": "^4.2.0",
    "@google-cloud/logging": "^11.2.0",
    "@google-cloud/functions-framework": "^3.4.2",

    // Web Framework & Middleware
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "express-session": "^1.18.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.2.0",

    // Rate Limiting & Security
    "express-rate-limit": "^7.4.1",
    "express-slow-down": "^2.0.3",
    "rate-limiter-flexible": "^5.0.3",

    // Authentication & Security
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^13.0.0",
    "nanoid": "^5.0.9",

    // Validation
    "joi": "^18.0.1",
    "zod": "^3.23.8",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.2",

    // External Services
    "stripe": "^18.5.0",
    "twilio": "^5.9.0",
    "@sendgrid/mail": "^8.1.5",

    // Image Processing
    "sharp": "^0.34.3",
    "puppeteer": "^24.20.0",

    // Caching & Database
    "redis": "^5.8.2",
    "ioredis": "^5.4.1",
    "lru-cache": "^11.0.0",
    "pg": "^8.12.0",
    "pg-pool": "^3.6.2",

    // HTTP Client
    "axios": "^1.12.1",
    "node-fetch": "^3.3.2",

    // Utilities
    "dayjs": "^1.11.18",
    "lodash": "^4.17.21",
    "ramda": "^0.30.1",

    // Convex Integration
    "convex": "^1.27.0",

    // Scheduling
    "node-cron": "^3.0.3",

    // File Upload
    "multer": "^2.0.2",

    // Monitoring & Observability
    "prom-client": "^15.1.3",
    "opentelemetry-auto": "^0.15.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.52.1",
    "@opentelemetry/exporter-prometheus": "^0.54.0",
    "@opentelemetry/exporter-jaeger": "^1.28.0",

    // Additional Performance & Security
    "ua-parser-js": "^2.0.0",
    "connect-redis": "^7.1.1",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1"
  },
  "devDependencies": {
    // TypeScript
    "@types/node": "^22.10.7",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/uuid": "^10.0.0",
    "@types/lodash": "^4.17.13",
    "@types/multer": "^2.0.0",
    "@types/compression": "^1.7.5",
    "@types/node-cron": "^3.0.11",
    "@types/cookie-parser": "^1.4.7",
    "@types/express-session": "^1.18.0",
    "@types/pg": "^8.11.10",
    "@types/ua-parser-js": "^0.7.39",

    // Linting & Formatting
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sonarjs": "^2.0.4",
    "prettier": "^3.6.2",

    // Testing
    "jest": "^30.1.3",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "firebase-functions-test": "^3.3.0",
    "supertest": "^7.1.1",
    "@types/supertest": "^6.0.2",
    "nock": "^14.0.0",
    "mockdate": "^3.0.5",
    "@faker-js/faker": "^9.4.0",
    "jest-extended": "^4.0.2",

    // Build Tools
    "typescript": "^5.9.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",

    // Bundle Analysis
    "webpack": "^5.96.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "terser": "^5.36.0",

    // Performance Testing
    "artillery": "^2.0.19",
    "@swc/core": "^1.9.3",
    "@swc/jest": "^0.2.38",

    // Coverage
    "nyc": "^17.1.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",

    // Documentation
    "typedoc": "^0.26.11",
    "http-server": "^14.1.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts",
      "!src/**/__tests__/**",
      "!src/**/types/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json", "cobertura"],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.ts", "jest-extended/all"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testTimeout": 30000,
    "maxWorkers": "50%",
    "cache": true,
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true,
    "transform": {
      "^.+\\.ts$": ["ts-jest", {
        "useESM": true
      }]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run precommit",
      "pre-push": "npm run prepush",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "private": true
}